<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textTemperatura"
        android:layout_width="176dp"
        android:layout_height="34dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:text="Temperatura actual : 20"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonBajarTemperatura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginTop="60dp"
        android:onClick="controlTemperatura"
        android:text="Bajar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonSubirTemperatura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="60dp"
        android:onClick="controlTemperatura"
        android:text="Subir"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imagePersiana1"
        android:layout_width="104dp"
        android:layout_height="69dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="120dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/persiana_bajada" />

    <ImageView
        android:id="@+id/imagePersiana2"
        android:layout_width="146dp"
        android:layout_height="68dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="120dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/persiana_bajada" />

    <ImageView
        android:id="@+id/imagePersiana3"
        android:layout_width="107dp"
        android:layout_height="67dp"
        android:layout_marginStart="252dp"
        android:layout_marginTop="120dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/persiana_bajada" />

    <ToggleButton
        android:id="@+id/toggleButton_Persianas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="108dp"
        android:layout_marginTop="200dp"
        android:onClick="controlPersianas"
        android:text="ToggleButton"
        android:textOff="Subir Persianas"
        android:textOn="Bajar Persianas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonPerro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:layout_marginTop="248dp"
        android:text="Ver que hace el perro"
        android:onClick="verEstadoPerro"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageLuces"
        android:layout_width="93dp"
        android:layout_height="70dp"
        android:layout_marginStart="287dp"
        android:layout_marginTop="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bombilla_apagada" />

    <Switch
        android:id="@+id/switchLuces"
        android:layout_width="112dp"
        android:layout_height="38dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="552dp"
        android:onClick="encenderLuces"
        android:text="Luces"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageEstadoPerro"
        android:layout_width="328dp"
        android:layout_height="186dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="311dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/imagen1" />

</androidx.constraintlayout.widget.ConstraintLayout>